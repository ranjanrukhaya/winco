<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/loader_view_1"
        android:layout_width="159dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/vaccine_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/loader_view_2"
        android:layout_width="75dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/vaccine_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_view_1" />

    <View
        android:id="@+id/loader_view_3"
        android:layout_width="123dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vaccine_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_view_2" />

    <View
        android:id="@+id/loader_view_4"
        android:layout_width="123dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vaccine_loader"
        app:layout_constraintStart_toEndOf="@+id/loader_view_3"
        app:layout_constraintTop_toBottomOf="@+id/loader_view_2" />

</androidx.constraintlayout.widget.ConstraintLayout>